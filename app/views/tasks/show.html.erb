<h1><%= @task.title %></h1>

<button class="button" type="button"><%= link_to "Edit task", edit_task_path(@task) %></button>

<p class="details_field"><%= @task.details %></p>

<p>
  <% if @task.completed %> <%= "This task is completed" %>
  <% else %> <%= "This task is not completed yet" %>
  <% end %>
</p>
<hr />
<p>&#8634; <%= link_to "Back to list", tasks_path %></p>
